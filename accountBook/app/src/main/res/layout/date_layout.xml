<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp">
    <TextView
            android:layout_width="68dp"
            android:layout_height="48dp"
            android:id="@+id/dateListType"
            android:textSize="30sp"
            android:gravity="center"
            android:text="수입"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"/>
    <TextView
            android:text="제목"
            android:layout_width="360dp"
            android:layout_height="20dp" android:id="@+id/dateListTitle"
            app:layout_constraintTop_toTopOf="@+id/dateListType"
            app:layout_constraintStart_toEndOf="@+id/dateListType"
            android:layout_marginStart="100dp"/>
    <TextView
            android:text="금액"
            android:layout_width="140dp"
            android:layout_height="20dp" android:id="@+id/dateListPrice"
            app:layout_constraintStart_toStartOf="@+id/dateListTitle"
            app:layout_constraintTop_toBottomOf="@+id/dateListTitle"
            app:layout_constraintBottom_toBottomOf="@+id/dateListType" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="날짜"
            android:layout_width="140dp"
            android:layout_height="20dp" android:id="@+id/dateListDate"
            app:layout_constraintTop_toTopOf="@+id/dateListPrice"
            app:layout_constraintBottom_toBottomOf="@+id/dateListPrice"
            app:layout_constraintStart_toEndOf="@+id/dateListPrice" android:layout_marginStart="80dp"
            app:layout_constraintVertical_bias="0.0"
    />
    <TextView
            android:text="제목 : "
            android:layout_width="wrap_content"
            android:layout_height="20dp" android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/dateListTitle"
            app:layout_constraintTop_toTopOf="@+id/dateListTitle"
            app:layout_constraintBottom_toBottomOf="@+id/dateListTitle"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="금액 : "
            android:layout_width="wrap_content"
            android:layout_height="20dp" android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/dateListPrice"
            app:layout_constraintTop_toTopOf="@+id/dateListPrice"
            app:layout_constraintEnd_toStartOf="@+id/dateListPrice"/>
    <TextView
            android:text="날짜 : "
            android:layout_width="wrap_content"
            android:layout_height="20dp" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/dateListDate"
            app:layout_constraintBottom_toBottomOf="@+id/dateListDate"
            app:layout_constraintEnd_toStartOf="@+id/dateListDate"/>
</androidx.constraintlayout.widget.ConstraintLayout>