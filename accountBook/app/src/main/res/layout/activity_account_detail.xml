<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AccountDetailActivity">

    <TextView
            android:text="상세내역"
            android:layout_width="242dp"
            android:layout_height="50dp"
            android:id="@+id/textView5"
            android:textSize="40sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"/>
    <TextView
            android:text="제목"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/textView6"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/textView7" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="날짜"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/textView8"
            android:textSize="27sp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView6"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="금액"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/textView9"
            android:textSize="27sp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView8"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="내용"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/textView10"
            android:textSize="27sp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView9"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="분류"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/textView7"
            android:textSize="27sp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="76dp"/>
    <TextView
            android:text="입/지출"
            android:layout_width="369dp"
            android:layout_height="36dp"
            android:id="@+id/typeDetail"
            android:textSize="27sp"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="제목"
            android:layout_width="369dp"
            android:layout_height="36dp"
            android:id="@+id/tilteDetail"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/typeDetail" app:layout_constraintTop_toTopOf="@+id/textView6"/>
    <TextView
            android:text="금액"
            android:layout_width="369dp"
            android:layout_height="36dp"
            android:id="@+id/priceDetail"
            android:textSize="27sp"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/dateDetail"/>
    <TextView
            android:text="날짜"
            android:layout_width="369dp"
            android:layout_height="36dp"
            android:id="@+id/dateDetail"
            android:textSize="27sp"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/tilteDetail"/>
    <TextView
            android:text="내용"
            android:layout_width="450dp"
            android:layout_height="298dp"
            android:id="@+id/contentDetail"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>