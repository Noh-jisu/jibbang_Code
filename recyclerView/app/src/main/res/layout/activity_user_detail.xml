<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserDetailActivity">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintVertical_bias="0.051"/>
    <TextView
            android:text="이름"
            android:layout_width="274dp"
            android:layout_height="35dp"
            android:id="@+id/userNameDetail"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="48dp"/>
    <TextView
            android:text="희망연봉"
            android:layout_width="274dp"
            android:layout_height="35dp"
            android:id="@+id/wishPayDetail"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameDetail"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="연락처"
            android:layout_width="274dp"
            android:layout_height="35dp"
            android:id="@+id/userPhoneDetail"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/wishPayDetail"
            android:layout_marginStart="48dp"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="주소"
            android:layout_width="274dp"
            android:layout_height="35dp"
            android:id="@+id/userAddressDetail"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/userPhoneDetail"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="지원분야"
            android:layout_width="525dp"
            android:layout_height="35dp"
            android:id="@+id/userDepartDetail"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="자기소개 내용"
            android:layout_width="525dp"
            android:layout_height="541dp"
            android:id="@+id/Introduce"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/userDepartDetail"
            android:layout_marginTop="44dp" app:layout_constraintHorizontal_bias="0.52"/>
</androidx.constraintlayout.widget.ConstraintLayout>