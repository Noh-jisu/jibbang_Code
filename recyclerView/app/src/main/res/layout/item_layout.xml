<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp">


    <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" />
    <TextView
            android:text="이름"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            app:layout_constraintStart_toEndOf="@+id/userPhoto"
            app:layout_constraintTop_toTopOf="@+id/userPhoto"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="지원부서"
            android:layout_width="220dp"
            android:layout_height="18dp"
            android:id="@+id/supDepartment"
            app:layout_constraintStart_toEndOf="@+id/userPhoto"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/userAddress" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="주소"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:id="@+id/userAddress"
            app:layout_constraintStart_toEndOf="@+id/userPhoto"
            app:layout_constraintBottom_toBottomOf="@+id/userPhoto"
            android:layout_marginStart="32dp" android:layout_marginBottom="28dp"/>
    <TextView
            android:text="희망연봉"
            android:layout_width="300dp"
            android:layout_height="18dp"
            android:id="@+id/userWishPay"
            app:layout_constraintStart_toEndOf="@+id/userPhoto"
            app:layout_constraintBottom_toBottomOf="@+id/userPhoto" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/userAddress" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="연락처"
            android:layout_width="170dp"
            android:layout_height="18dp"
            android:id="@+id/userPhoneNum"
            app:layout_constraintStart_toEndOf="@+id/userAddress" app:layout_constraintTop_toTopOf="@+id/userAddress"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>